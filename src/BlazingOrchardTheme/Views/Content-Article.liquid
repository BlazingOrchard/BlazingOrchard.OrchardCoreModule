{% zone "Header" %}
    <!-- Page Header -->
    <!-- Set your background image for this header on the line below. -->
    {% assign imagePath = Model.ContentItem.Content.Article.Image.Paths.first %}
    {% if imagePath == nil %}
        <header class="masthead" style="background-image: url('{{ "~/BlazingOrchardTheme/img/about-bg.jpg" | href }}')">
    {% else %}
        <header class="masthead" style="background-image: url('{{ imagePath | asset_url | resize_url: profile: 'banner' }}')">
    {% endif %}
        <div class="overlay"></div>
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-md-10 mx-auto">
                    <div class="page-heading">
                        <h1>{{ Model.ContentItem.DisplayText }}</h1>
                        <span class="subheading">{{ Model.ContentItem.Content.Article.Subtitle.Text }}</span>
                    </div>
                </div>
            </div>
        </div>
    </header>
{% endzone %}

